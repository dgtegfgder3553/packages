					tr
						td Content Rating:
							select(name="contentRating")
								option(value="") -- Select --
								option(value="Everyone") Everyone
								option(value="Everyone 10+") Everyone 10+
								option(value="Teen") Teen
								option(value="Mature 17+") Mature 17+
								option(value="Adults only 18+") Adults only 18+
								option(value="Unrated") Unrated
					tr
						td
							input(class="btn btn-primary" type="submit" value="Submit")


		div
			table(id="mainTable", class="display")
				thead(class="thead-light")
					tr
						th Title
						th Ratings
						th Stars
						th IAP
						th Ads
						th Price
						th IAP Range
						th Category
						th Content Rating
						th Last Update
						th Developer
				each value, key in data
					if value.price !== 0
						tr(class="table-warning")
							td
								img(src=value.thumbnailLink, style="width:50px;height:50px")
								a(href=value.link, target="_blank" data-toggle="tooltip" title=value.description) #{value.title}
							td #{value.ratings}
							td #{value.stars}
							td #{value.iap}
							td #{value.ads}
							td #{value.price}
							td #{value.iapRange}
							td #{value.category}
							td #{value.contentRating}
							td #{value.appUpdated}
							td #{value.dev}
					else
						tr
							td
								img(src=value.thumbnailLink, style="width:50px;height:50px")
								a(href=value.link, target="_blank" data-toggle="tooltip" title=value.description) #{value.title}
							td #{value.ratings}
							td #{value.stars}
							td #{value.iap}
							td #{value.ads}
							td #{value.price}
							td #{value.iapRange}
							td #{value.category}
							td #{value.contentRating}
							td #{value.appUpdated}
							td #{value.dev}